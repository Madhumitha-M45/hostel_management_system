import React, { useState } from "react";
import "./AdminAddStudent.css";

export default function AdminAddStudent() {
  const [form, setForm] = useState({
    roll: "",
    name: "",
    department: "",
    year: "",
    password: ""
  });

  const handleChange = (e) => {
    setForm({ ...form, [e.target.name]: e.target.value });
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    console.log("Student Added:", form);
    alert("Student Added Successfully!");
  };

  return (
    <div className="admin-container">
      <aside className="sidebar">
        <h3>Mess LMS</h3>
        <a href="#">Bill Calculation</a>
        <a href="#">Non-Veg Items</a>
        <a href="#">Admin Page</a>
      </aside>

      <main className="content">
        <h2>Student Management</h2>
        <form onSubmit={handleSubmit} className="student-form">
          <input
            type="text"
            name="roll"
            placeholder="Roll Number"
            value={form.roll}
            onChange={handleChange}
          />
          <input
            type="text"
            name="name"
            placeholder="Name"
            value={form.name}
            onChange={handleChange}
          />
          <input
            type="text"
            name="department"
            placeholder="Department"
            value={form.department}
            onChange={handleChange}
          />
          <input
            type="text"
            name="year"
            placeholder="Year"
            value={form.year}
            onChange={handleChange}
          />
          <input
            type="password"
            name="password"
            placeholder="Password"
            value={form.password}
            onChange={handleChange}
          />
          <button type="submit">Add Student</button>
        </form>

        <div className="bulk-upload">
          <p>Bulk Upload Students</p>
          <input type="file" />
        </div>
      </main>
    </div>
  );
}

//css
.admin-container {
  display: flex;
  height: 100vh;
}

.sidebar {
  background: #2c3e50;
  color: white;
  width: 220px;
  padding: 20px;
}

.sidebar a {
  display: block;
  margin: 10px 0;
  color: white;
  text-decoration: none;
}

.sidebar a:hover {
  text-decoration: underline;
}

.content {
  flex: 1;
  padding: 20px;
}

.student-form input {
  display: block;
  width: 300px;
  margin-bottom: 10px;
  padding: 8px;
}

.student-form button {
  background: #28a745;
  color: white;
  border: none;
  padding: 8px;
  cursor: pointer;
  width: 150px;
}

.bulk-upload {
  margin-top: 20px;
  padding: 10px;
  border: 2px dashed #ccc;
  width: 320px;
}
